import tkinter as tk
from tkinter import messagebox

# List of 10 questions with options and correct answers
questions = [
    {
        "question": "Which of the following schemes has the purpose of a garbage-free city?",
        "options": [
            "Swachh Bharat Mission - rural phase 2",
            "Swachh Bharat Mission - urban phase 2",
            "Swachh Bharat Mission - urban phase 1",
            "Swachh Bharat Mission - rural"
        ],
        "answer": 1
    },
    {
        "question": "What does CPU stand for?",
        "options": [
            "Central Process Unit",
